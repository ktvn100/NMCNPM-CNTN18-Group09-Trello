<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select member to add to this card:"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/gotham"
            android:textColor="@color/purple_700"
            android:textStyle="bold">
        </TextView>
        <CheckBox
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Le Hong Huy"
            android:fontFamily="@font/gotham"
            android:id="@+id/hongHuy">
        </CheckBox>
        <CheckBox
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Le Quang Vu"
            android:fontFamily="@font/gotham"
            android:id="@+id/quangVu">
        </CheckBox>
        <CheckBox
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Cao Thai Son"
            android:fontFamily="@font/gotham"
            android:id="@+id/thaiSon">
        </CheckBox>
        <CheckBox
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Do Hoang The"
            android:fontFamily="@font/gotham"
            android:id="@+id/hoangThe">
        </CheckBox>
        <CheckBox
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Tran Quang Tien"
            android:fontFamily="@font/gotham"
            android:id="@+id/quangTien">
        </CheckBox>
    </LinearLayout>
</LinearLayout>